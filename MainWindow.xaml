<Window x:Class="FusionMods.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FusionMods"
        mc:Ignorable="d"
        Title="Fusion Launcher"
        Height="540" Width="860"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#0f1220" WindowStyle="None">

    <Window.Resources>
        <Color x:Key="ColBg">#0f1220</Color>
        <Color x:Key="ColSurface">#171a2b</Color>
        <Color x:Key="ColSurfaceAlt">#1f2340</Color>
        <Color x:Key="ColAccent">#6E95FF</Color>
        <Color x:Key="ColAccentAlt">#8BD6FF</Color>
        <Color x:Key="ColText">#EEF1FF</Color>
        <Color x:Key="ColTextDim">#B9C0E6</Color>
        <Color x:Key="ColBorder">#2c3152</Color>
        <Color x:Key="ColSuccess">#4CAF50</Color>

        <SolidColorBrush x:Key="BrushBg" Color="{StaticResource ColBg}"/>
        <SolidColorBrush x:Key="BrushSurface" Color="{StaticResource ColSurface}"/>
        <SolidColorBrush x:Key="BrushSurfaceAlt" Color="{StaticResource ColSurfaceAlt}"/>
        <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ColAccent}"/>
        <SolidColorBrush x:Key="BrushAccentAlt" Color="{StaticResource ColAccentAlt}"/>
        <SolidColorBrush x:Key="BrushText" Color="{StaticResource ColText}"/>
        <SolidColorBrush x:Key="BrushTextDim" Color="{StaticResource ColTextDim}"/>
        <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource ColBorder}"/>
        <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource ColSuccess}"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BrushSurfaceAlt}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.25" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
            <Setter Property="Background" Value="{StaticResource BrushAccent}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="12" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource BrushAccentAlt}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Background" Value="#2a2f52"/>
        </Style>

        <Style x:Key="RedButton" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Background" Value="#700000"/>
        </Style>

        <Style x:Key="SuccessButton" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BrushSuccess}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
            <Setter Property="Background" Value="#131732"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="CaretBrush" Value="{StaticResource BrushText}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource BrushSurface}" Padding="12">
            <DockPanel x:Name="DragPanel" LastChildFill="False" MouseDown="DockPanel_MouseDown">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="🌀" FontSize="22" Margin="0,-2,8,0"/>
                    <TextBlock Text="Fusion Mods Launcher" FontSize="20" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" RenderTransformOrigin="0.502,0.539">
                    <Button x:Name="ToggleSettingsButton"
                            Margin="8,0,0,0"
                            Style="{StaticResource SecondaryButton}"
                            Content="⚙ Einstellungen"
                            Click="ToggleSettingsButton_Click" Width="83"/>
                    <Button x:Name="Closebtn"
                            Margin="18,0,0,0"
                            Style="{StaticResource RedButton}"
                            Content="CLOSE"
                            Click="Closebtn_Click" Width="30" FontSize="16" RenderTransformOrigin="0.5,0.5" >
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main -->
        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/background.jpg"
                    Stretch="UniformToFill"/>
            </Grid.Background>

            <Grid Margin="28">
                <Border HorizontalAlignment="Center"
            VerticalAlignment="Center"
            MaxWidth="600"
            CornerRadius="20"
            Padding="0"
            Background="{x:Null}">
                    <Grid SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality">
                        <Border CornerRadius="20" ClipToBounds="True" CacheMode="BitmapCache">
                            <Border.Background>
                                <VisualBrush Visual="{Binding ElementName=RootBackground}"
                                 Stretch="None"
                                 AlignmentX="Center"
                                 AlignmentY="Center"/>
                            </Border.Background>
                            <Border.Effect>
                                <BlurEffect Radius="24"/>
                            </Border.Effect>
                        </Border>

                        <Border CornerRadius="20"
                    Background="#AA0E1220"/>

                        <Border CornerRadius="20"
                    BorderBrush="#55FFFFFF" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#99FFFFFF" Opacity="0.45"/>
                            </Border.Effect>
                        </Border>

                        <Grid Margin="28">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,18">
                                <TextBlock Text="Willkommen bei Fusion Mods"
                               FontSize="28" FontWeight="Bold"
                               Foreground="#FFFFFF"
                               HorizontalAlignment="Center"/>
                                <TextBlock Text="Verbinde dich leicht und schnell auf deinen Lieblings Server!"
                               FontSize="14"
                               Foreground="#E0FFFFFF"
                               Margin="0,6,0,0"
                               HorizontalAlignment="Center"/>
                            </StackPanel>

                            <Button x:Name="StartButton"
                        Grid.Row="1"
                        Content="🚀 Spiel starten"
                        Width="280" Height="56" FontSize="16"
                        Click="StartButton_Click"
                        Foreground="#FFFFFFFF">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Border CornerRadius="16" ClipToBounds="True">
                                                <Border.Background>
                                                    <SolidColorBrush Color="#22FFFFFF"/>
                                                    <!-- sehr leichtes Weiß -->
                                                </Border.Background>
                                                <Border.Effect>
                                                    <BlurEffect Radius="6"/>
                                                </Border.Effect>
                                            </Border>

                                            <Border CornerRadius="16"
                                        Background="#33000000"
                                        BorderBrush="#66FFFFFF" BorderThickness="1"
                                        Padding="14,10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.98"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <TextBlock Grid.Row="2"
                           Margin="0,16,0,0"
                           FontSize="12"
                           Foreground="#CCFFFFFF"
                           Text="Tipp: Einstellungen über „⚙ Einstellungen“ öffnen – wird automatisch gespeichert."
                           TextAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Rectangle x:Name="Scrim"
                       Fill="#99000000"
                       Visibility="Collapsed"
                       Panel.ZIndex="9">
                <Rectangle.Style>
                    <Style TargetType="Rectangle">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=SettingsPanel, Path=Visibility}" Value="Visible">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Rectangle.Style>
            </Rectangle>

            <Border Grid.RowSpan="2"
                    x:Name="SettingsPanel"
                    Style="{StaticResource Card}"
                    Width="520"
                    Background="{StaticResource BrushSurface}"
                    Visibility="Collapsed"
                    Panel.ZIndex="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <StackPanel>
                    <TextBlock Text="⚙ Einstellungen" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>

                    <CheckBox x:Name="OpenTeamSpeakCheckbox"
                              Content="TeamSpeak automatisch öffnen"/>

                    <CheckBox x:Name="EnablePureModeCheckbox"
                              Content="FiveM im PureMode starten"/>

                    <TextBlock Text="Server Join Code (Bsp: r9g6xx)" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <TextBox x:Name="ServerIpTextBox"/>

                    <TextBlock Text="TeamSpeak IP" FontWeight="SemiBold"/>
                    <TextBox x:Name="TeamSpeakIpTextBox"/>

                    <TextBlock x:Name="Waitingtitle" Text="Waiting Time(Time to Wait for the FiveM Main Process!)" FontWeight="SemiBold"/>
                    <TextBox x:Name="WaitingTimeTextBox"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Style="{StaticResource SecondaryButton}" Content="Schließen" Margin="8,0,0,0" Click="ToggleSettingsButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
